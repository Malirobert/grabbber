{
  "manifest_version": 3,
  "name": "Grabbber",
  "version": "1.0",
  "description": "Download videos from various platforms",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "fonts/*",
      "icons/*",
      "firebase/*"
    ],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/tailwind.min.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  }
} 